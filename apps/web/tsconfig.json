{
  "exclude": ["node_modules"],
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./src/*"]
    },
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": [
    ".",
    "src",
    "next.config.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
  ]
}
