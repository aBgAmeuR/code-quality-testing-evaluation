{
  "exclude": [
    "node_modules"
  ],
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": [
    ".",
    "src",
    "next.config.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "tailwind.config.ts"
  ]
}
